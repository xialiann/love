<script>
let modal=document.getElementById("modal");
let book=document.getElementById("book");
let music=document.getElementById("music");

function start(){
modal.style.display="none";
book.style.display="block";
music.play();
createPetals();
createCandles();
}

let begs=["–ü–æ–∂–∞–ª—É–π—Å—Ç–∞...","–ù—É –ø–æ–∂–∞–ª—É–π—Å—Ç–∞...","–ü–æ–¥—É–º–∞–π –µ—â—ë —Ä–∞–∑...","–ó–∞–π—á–∏–∫ —Ä–∞—Å—Å—Ç—Ä–æ–∏—Ç—Å—è..."];
function beg(){
document.getElementById("begText").innerText=
begs[Math.floor(Math.random()*begs.length)];
}

let pages=document.querySelectorAll(".page");
let current=0;
function next(){
pages[current].classList.remove("active");
current++;
pages[current].classList.add("active");
}

function createPetals(){
for(let i=0;i<20;i++){
let p=document.createElement("div");
p.className="petal";
p.style.left=Math.random()*100+"vw";
p.style.animationDuration=(5+Math.random()*5)+"s";
document.body.appendChild(p);
}
}

function createCandles(){
for(let i=0;i<3;i++){
let c=document.createElement("div");
c.className="candle";
c.style.left=(20+i*40)+"%";
let f=document.createElement("div");
f.className="flame";
c.appendChild(f);
document.body.appendChild(c);
}
}

function showStars(){
book.style.display="none";
let sky=document.getElementById("stars");
sky.style.display="block";

// –æ–±—ã—á–Ω—ã–µ –∑–≤—ë–∑–¥—ã
for(let i=0;i<300;i++){
let s=document.createElement("div");
s.className="star";
s.style.width=s.style.height=Math.random()*3+"px";
s.style.top=Math.random()*100+"vh";
s.style.left=Math.random()*100+"vw";
sky.appendChild(s);
}

// –ø–∞–¥–∞—é—â–∞—è –∑–≤–µ–∑–¥–∞
let shooting=document.createElement("div");
shooting.className="shooting";
shooting.style.top="20%";
sky.appendChild(shooting);

// –Ω–∞–¥–ø–∏—Å—å
let text=document.createElement("div");
text.className="wish";
text.innerText="–°–ø–∞—Å–∏–±–æ, —á—Ç–æ —Ç—ã –µ—Å—Ç—å –≤ –º–æ–µ–π –∂–∏–∑–Ω–∏ ‚ù§Ô∏è";
sky.appendChild(text);
}
</script>

